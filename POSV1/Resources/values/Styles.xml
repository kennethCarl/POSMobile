<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#00bcd4</item>
    <item name="drawerArrowStyle">@style/LeftDrawerArrowStyle</item>
    <item name="colorAccent">#004d40</item>
  </style>

  <style name ="LeftDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#F5F5F5</item>
    <item name="spinBars">true</item>
  </style>

  <style name="TextLabel1" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">#00bcd4</item>
    <item name="android:textSize">15sp</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">#00796b</item>
    <item name="colorControlNormal">#00bcd4</item>
    <item name="colorControlActivated">#00796b</item>
  </style>
  
  <style name="TextLabel2" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">#00bcd4</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">#00bcd4</item>
    <item name="colorControlNormal">#00bcd4</item>
    <item name="colorControlActivated">#00bcd4</item>
  </style>
</resources>
